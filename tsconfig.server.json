{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["es2021"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "src/lib/socket.ts",
    "src/lib/socket-events.ts"
  ]
}
