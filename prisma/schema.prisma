generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ClipboardItem {
  id          String   @id @default(cuid())
  type        ItemType
  content     String?
  fileName    String?
  fileSize    Int?
  contentType String?
  // Mixed storage: small files/images inline as BLOB, large ones on disk
  inlineData  Bytes?
  filePath    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  shares      ShareLink[]
}

model ShareLink {
  token         String   @id
  itemId        String
  item          ClipboardItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  expiresAt     DateTime?
  maxDownloads  Int?
  downloadCount Int      @default(0)
  revoked       Boolean  @default(false)
  passwordHash  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([itemId])
}

enum ItemType {
  TEXT
  IMAGE
  FILE
}
