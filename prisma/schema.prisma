generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ClipboardItem {
  id        String   @id @default(cuid())
  type      ItemType
  content   String?
  fileName  String?
  fileSize  Int?
  fileData  String?  // Base64 encoded file data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ItemType {
  TEXT
  IMAGE
  FILE
}